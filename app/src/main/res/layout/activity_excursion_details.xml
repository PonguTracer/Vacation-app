<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ExcursionDetailsActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:text="Excursion Title" />

        <EditText
            android:id="@+id/excursionTitleEt"
            android:layout_width="200dp"
            android:layout_height="64dp"
            android:hint="Excursion Title"
            android:inputType="text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:text="Excursion Date" />

        <EditText
            android:id="@+id/excursionDateEt"
            android:layout_width="200dp"
            android:layout_height="64dp"
            android:focusableInTouchMode="false"
            android:focusable="false"
            android:hint="Excursion Date"
            android:inputType="date" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>